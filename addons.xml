<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.kobrawizard" name="Kobra Wizard" version="3.3" provider-name="Kobra Builds">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
	<import addon="script.module.addon.common" />
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Kobra Wizard</summary>
    <description lang="en">Kobra Wizard provides easy access to Kobra Builds at the click of a button. No addons are distributed with Kobra Builds. You will be asked if you would like to download each addons as you click on main menu and sub menu items.
Thanks to all Devs who have contributed to this project!</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.kobra" name="Kobra Repo" version="1.0.0" provider-name="KCB">
	<extension point="xbmc.addon.repository" name="Kobra Repo">
		<info compressed="false">https://raw.github.com/Barroni1977/kobra/master/addons.xml</info>
		<checksum>https://raw.github.com/Barroni1977/kobra/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.github.com/Barroni1977/kobra/master/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Kobra Repository</summary>
		<description>Home of the Kobra wizard</description>
		<platform>all</platform>
	</extension>
</addon>

<addon id="script.kobra.builds" name="KOBRA CUSTOM BUILDS" version="1.0.0" provider-name="zag">
    <requires>
		<import addon="xbmc.python" version="2.14.0"/>
	</requires>
	<extension point="xbmc.python.script" library="addon.py">
		<provides>executable</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<summary lang="en">Popup Hello World</summary>
		<description lang="en">Example Script to show hello world</description>
		<license>GNU General Public License, v2</license>
		<language></language>
		<forum>http://forum.kodi.tv/showthread.php?tid=209948</forum>
		<source>https://github.com/zag2me/script.hello.world</source>
		<email>zag@kodi.org</email>
	</extension>
</addon>
</addons>
